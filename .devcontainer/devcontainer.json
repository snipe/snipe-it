{
    "image": "mcr.microsoft.com/devcontainers/php:8.3",
    "postCreateCommand": [
        "git config --global --add safe.directory /workspaces/snipe-it",
        "&& sudo chmod a+x /workspaces/snipe-it",
        "&& sudo rm -rf /var/www/html",
        "&& sudo ln -s /workspaces/snipe-it /var/www/html",
        "&& if [ -f composer.json ];then composer install;fi;"
    ]
}